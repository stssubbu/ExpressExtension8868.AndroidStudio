<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/managebusinesslistlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/Relative1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@+id/stsColor"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/businessnameedittext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/BusinessDatilsBackground"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ein"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/EinNumberNormal"
            android:textSize="16dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/stsColor"
        android:layout_width="10dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/Relative1"
        android:layout_alignParentLeft="true"
        android:visibility="gone"
        android:layout_alignParentTop="true"
        android:background="@color/Orange" />

</RelativeLayout>