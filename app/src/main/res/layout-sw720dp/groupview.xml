<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/groupborder"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/changecolorback"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/expandablechildrectangleshape">

            <LinearLayout
                android:id="@+id/imageindicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/returnstatusindicatorcolor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/returnno"

                    style="@style/LabelTextView"
                    android:text="@string/Return_Number" />

                <TextView
                    android:id="@+id/returnnumber"
                    style="@style/ValueTextView" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.62"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/extensionTypetextview"
                    style="@style/LabelTextView"
                    android:text="@string/Type_of_Extension" />

                <TextView
                    android:id="@+id/extensionType"
                    style="@style/ValueTextView" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.62"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/lastupdate"
                    style="@style/LabelTextView"
                    android:text="@string/Last_Updated_On" />

                <TextView
                    android:id="@+id/udt"
                    style="@style/ValueTextView" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/returnstatustextview"
                    style="@style/LabelTextView"
                    android:text="@string/Status" />


                <TextView
                    android:id="@+id/returnstatus"
                    style="@style/ValueTextView"
                    android:singleLine="true"
                    android:textStyle="italic" />

            </LinearLayout>

            <ImageView
                android:id="@+id/groupindicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/downarrow"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>