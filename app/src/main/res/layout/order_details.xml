<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="45dp">

            <LinearLayout
                android:id="@+id/WholeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">

                <TextView
                    android:id="@+id/text1"
                    style="@style/subTitleTextView"
                    android:text="@string/Your_Order" />


                <android.support.v7.widget.CardView style="@style/Border">

                    <LinearLayout
                        style="@style/Border2"
                        android:padding="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/Dashboardlisteven"
                            android:orientation="horizontal"
                            android:weightSum="4">

                            <TextView
                                style="@style/ValueTextView"
                                android:layout_width="0dp"
                                android:layout_weight="3"
                                android:padding="5dp"
                                android:text="@string/Form_Name"
                                android:textStyle="bold" />

                            <View style="@style/vertical_line_style" />

                            <TextView
                                style="@style/ValueTextView"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:padding="5dp"
                                android:text="@string/Price"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:weightSum="4">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/SKUName"
                                    style="@style/ValueTextView"
                                    android:padding="5dp"
                                    android:text="@string/form1"
                                    android:textColor="@color/edit_bg" />

                                <TextView
                                    android:id="@+id/SKUDescription"
                                    style="@style/ValueTextView"
                                    android:padding="5dp"
                                    android:text="@string/form2" />
                            </LinearLayout>

                            <View style="@style/vertical_line_style" />

                            <TextView
                                android:id="@+id/SKUPrice"
                                style="@style/ValueTextView"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:padding="5dp"
                                android:textColor="@color/edit_bg" />
                        </LinearLayout>

                        <View
                            style="@style/horizantal_line_style"
                            android:layout_margin="0dp" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="4">

                            <TextView
                                style="@style/ValueTextView"
                                android:layout_width="0dp"
                                android:layout_weight="3"
                                android:gravity="right"
                                android:padding="5dp"
                                android:text="@string/Subtotal"
                                android:textColor="@color/Common_ThirdButton_Bg"
                                android:textStyle="bold" />

                            <View style="@style/vertical_line_style" />

                            <TextView
                                android:id="@+id/SKUTotalPrice"
                                style="@style/ValueTextView"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:padding="5dp"
                                android:textColor="@color/thickblue"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <View
                            style="@style/horizantal_line_style"
                            android:layout_margin="0dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:weightSum="4">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">


                                <CheckBox
                                    android:id="@+id/MobileAlertCheckBox"
                                    style="@style/CheckboxStyle"
                                    android:layout_marginBottom="5dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginTop="5dp"
                                    android:text="@string/mobile_alert" />

                            </LinearLayout>

                            <View style="@style/vertical_line_style" />

                            <TextView
                                android:id="@+id/MobileAlertPrice"
                                style="@style/ValueTextView"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:padding="5dp"
                                android:textColor="@color/thickblue" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:orientation="horizontal"
                            android:weightSum="4">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:gravity="center_horizontal"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/MobileNumberImport"
                                    style="@style/ValueTextView"
                                    android:text="*"
                                    android:textColor="@color/red" />

                                <com.rengwuxian.materialedittext.MaterialEditText
                                    android:id="@+id/MobileNumberEditText"
                                    style="@style/material_edittext_style"
                                    android:layout_height="wrap_content"
                                    android:ems="11"
                                    android:hint="@string/Mobile_Phone"
                                    android:inputType="phone"
                                    android:maxLength="14"
                                    android:singleLine="true" />
                            </LinearLayout>

                            <View style="@style/vertical_line_style" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:weightSum="4">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">


                                <CheckBox
                                    android:id="@+id/FaxAlertCheckBox"
                                    style="@style/CheckboxStyle"
                                    android:layout_marginBottom="5dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginTop="5dp"
                                    android:text="@string/fax_alert" />

                            </LinearLayout>

                            <View style="@style/vertical_line_style" />

                            <TextView
                                android:id="@+id/FaxAlertPrice"
                                style="@style/ValueTextView"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:padding="5dp"
                                android:textColor="@color/thickblue" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="4">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:gravity="center_horizontal"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/FaxAlertImport"
                                    style="@style/ValueTextView"
                                    android:text="*"
                                    android:textColor="@color/red" />

                                <com.rengwuxian.materialedittext.MaterialEditText
                                    android:id="@+id/FaxNumberEditText"
                                    style="@style/material_edittext_style"
                                    android:layout_height="wrap_content"
                                    android:ems="11"
                                    android:hint="@string/fax_number_"
                                    android:inputType="phone"
                                    android:maxLength="14"
                                    android:singleLine="true" />
                            </LinearLayout>

                            <View style="@style/vertical_line_style" />


                        </LinearLayout>

                        <View
                            style="@style/horizantal_line_style"
                            android:layout_margin="0dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:weightSum="4">

                            <TextView

                                style="@style/ValueTextView"
                                android:layout_width="0dp"
                                android:layout_weight="3"
                                android:gravity="right"
                                android:padding="5dp"
                                android:text="@string/Alert_Fee"
                                android:textColor="@color/Common_ThirdButton_Bg"
                                android:textStyle="bold" />

                            <View style="@style/vertical_line_style" />

                            <TextView
                                android:id="@+id/AlertFee"
                                style="@style/ValueTextView"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:padding="5dp"
                                android:textColor="@color/thickblue"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <View
                            style="@style/horizantal_line_style"
                            android:layout_margin="0dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/total_fee_bg"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            android:weightSum="4">

                            <TextView
                                style="@style/ValueTextView"
                                android:layout_width="0dp"
                                android:layout_weight="3"
                                android:gravity="right"
                                android:padding="5dp"
                                android:text="@string/Fee_Summary"
                                android:textColor="@color/White"
                                android:textStyle="bold" />

                            <View style="@style/vertical_line_style" />

                            <TextView
                                android:id="@+id/SummaryFee"
                                style="@style/ValueTextView"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:padding="5dp"
                                android:textColor="@color/White"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@color/Returngrey"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/DiscountIcon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:background="@drawable/show" />

                            <TextView
                                android:id="@+id/DiscountTitle"
                                style="@style/ValueTextView"
                                android:padding="5dp"
                                android:text="@string/Discounts"
                                android:textColor="@color/Black"
                                android:textStyle="bold" />


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/DiscountLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:orientation="horizontal"
                                android:weightSum="4">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="3"
                                    android:gravity="center_horizontal"
                                    android:orientation="horizontal">


                                    <com.rengwuxian.materialedittext.MaterialEditText
                                        android:id="@+id/DiscountCode"
                                        style="@style/material_edittext_style"
                                        android:layout_height="wrap_content"
                                        android:ems="11"
                                        android:hint="@string/Discount_code"
                                        android:inputType="text"
                                        android:maxLength="14"
                                        android:singleLine="true" />

                                    <android.support.v7.widget.CardView
                                        android:id="@+id/DiscountApplybutton"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginLeft="15dp"
                                        android:clickable="true"
                                        android:paddingBottom="5dp"
                                        android:paddingTop="5dp"
                                        android:visibility="visible"
                                        card_view:cardBackgroundColor="#ffd26e17"
                                        card_view:cardCornerRadius="2dp"
                                        card_view:cardElevation="5dp">

                                        <TextView
                                            style="@style/card_button_text"
                                            android:text="@string/Apply"
                                            android:textColor="@color/White"
                                            android:textSize="15sp" />
                                    </android.support.v7.widget.CardView>
                                </LinearLayout>

                                <View style="@style/vertical_line_style" />

                            </LinearLayout>

                            <View
                                style="@style/horizantal_line_style"
                                android:layout_margin="0dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:weightSum="4">

                                <TextView
                                    style="@style/ValueTextView"
                                    android:layout_width="0dp"
                                    android:layout_weight="3"
                                    android:gravity="right"
                                    android:padding="5dp"
                                    android:text="@string/Discount_fee"
                                    android:textColor="@color/thickblue"
                                    android:textStyle="bold" />

                                <View style="@style/vertical_line_style" />

                                <TextView
                                    android:id="@+id/DiscountFee"
                                    style="@style/ValueTextView"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:gravity="right"
                                    android:padding="5dp"
                                    android:textColor="@color/thickblue"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <View
                                style="@style/horizantal_line_style"
                                android:layout_margin="0dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/Common_ThirdButton_Bg"

                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:weightSum="4">

                            <TextView
                                style="@style/ValueTextView"
                                android:layout_width="0dp"
                                android:layout_marginRight="10dp"
                                android:layout_weight="3"
                                android:gravity="right"
                                android:padding="5dp"
                                android:text="@string/Total_Fees"
                                android:textColor="@color/White"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <View style="@style/vertical_line_style" />

                            <TextView
                                android:id="@+id/TotalFees"
                                style="@style/ValueTextView"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:padding="5dp"
                                android:textColor="@color/White"
                                android:textSize="20sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </ScrollView>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:padding="5dp"
            android:visibility="visible">


            <android.support.v7.widget.CardView
                android:id="@+id/orderCancel"
                style="@style/CancelButtonStyle"
                android:layout_gravity="left"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/orderCancelText"
                    style="@style/card_button_text"
                    android:text="@string/back" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/orderNext"
                style="@style/PrimaryButtonStyle"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/orderNextText"
                    style="@style/card_button_text"
                    android:text="@string/next" />
            </android.support.v7.widget.CardView>


        </FrameLayout>


    </FrameLayout>


</LinearLayout>